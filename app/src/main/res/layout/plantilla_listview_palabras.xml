<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listadoEntradas_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">
        <!--PALABRA Y SONIDO-->
        <LinearLayout
            android:layout_weight="1.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/palabra_ingles"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/GreenTextDark"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/iBtn_SoundEng"
                android:src="@drawable/buton_sound"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="40dp"/>
        </LinearLayout>

        <!--PALABRA Y TRADUCCIÃ“N-->
        <LinearLayout
            android:layout_weight="1.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/palabra_espannol"
                android:layout_weight="1.25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/GreenTextDark"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/iBtn_SoundEsp"
                android:src="@drawable/buton_sound"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="40dp"/>
        </LinearLayout>

        <!--TIPO PALABRA-->
        <TextView
            android:id="@+id/palabra_tipo"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GreenTextLessDark"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/palabra_fechaintro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GreenTextLessDark"
        android:textSize="15sp"
        android:textStyle="italic"
        android:padding="2dp" />

    <TextView
        android:id="@+id/palabra_fechaLastTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GreenTextLessDark"
        android:textSize="15sp"
        android:textStyle="italic"
        android:padding="2dp" />

    <TextView
        android:id="@+id/palabra_aciertos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GreenTextLessDark"
        android:textSize="15sp"
        android:textStyle="italic"
        android:padding="2dp" />

</LinearLayout>